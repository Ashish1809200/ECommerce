@model ProductViewModel

<div class="card shadow border-0 mt-4 mb-5">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Product.Id != 0 ? "Update" : "Create") Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input type="hidden" asp-for="Product.Id" />
            <input type="hidden" asp-for="Product.ImageUrl" />
            <div class="col-10">
                <div class="border border-1 p-3">
                    @* <div asp-validation-summary="All"></div> *@
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Product.Title" class="form-control border-0 shadow" />
                        <label asp-for="Product.Title" class="ms-2"></label>
                        <span class="text-danger" asp-validation-for="Product.Title"></span>
                    </div>
                    <div class="py-2 col-12">
                        <label asp-for="Product.Description" class="ms-2 text-muted"></label>
                        <textarea asp-for="Product.Description" class="form-control border-0 shadow"></textarea>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Product.ISBN" class="form-control border-0 shadow" />
                        <label asp-for="Product.ISBN" class="ms-2"></label>
                        <span class="text-danger" asp-validation-for="Product.ISBN"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Product.Author" class="form-control border-0 shadow" />
                        <label asp-for="Product.Author" class="ms-2"></label>
                        <span class="text-danger" asp-validation-for="Product.Author"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Product.ListPrice" class="form-control border-0 shadow" />
                        <label asp-for="Product.ListPrice" class="ms-2"></label>
                        <span class="text-danger" asp-validation-for="Product.ListPrice"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Product.Price" class="form-control border-0 shadow" />
                        <label asp-for="Product.Price" class="ms-2"></label>
                        <span class="text-danger" asp-validation-for="Product.Price"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Product.Price50" class="form-control border-0 shadow" />
                        <label asp-for="Product.Price50" class="ms-2"></label>
                        <span class="text-danger" asp-validation-for="Product.Price50"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Product.Price100" class="form-control border-0 shadow" />
                        <label asp-for="Product.Price100" class="ms-2"></label>
                        <span class="text-danger" asp-validation-for="Product.Price100"></span>
                    </div>
                    <div class=" form-floating py-12 col-12">
                        <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                            <option disabled selected>--Select Category--</option>
                        </select>
                        <label asp-for="Product.CategoryId" class="ms-2"></label>
                        <span class="text-danger" asp-validation-for="Product.CategoryId"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input type="file" name="file" class="form-control border-0 shadow" />
                        <label asp-for="Product.ImageUrl" class="ms-2"></label>
                    </div>
                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            @if (Model.Product.Id != 0)
                            {
                                <button type="submit" class="btn btn-primary form-control">Update</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary form-control">Create</button>
                            }
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border border-1 form-control">Back To List</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-2">
                <img src="@Model.Product.ImageUrl" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script>
        tinymce.init({
          selector: 'textarea',
          plugins: [
            'anchor', 'charmap', 'codesample', 'emoticons', 'lists', 'table', 'visualblocks', 'wordcount',

            'checklist', 'mediaembed', 'casechange', 'formatpainter', 'pageembed', 'a11ychecker', 'tinymcespellchecker', 'permanentpen', 'powerpaste', 'advtable', 'advcode', 'advtemplate', 'uploadcare', 'mentions', 'tableofcontents', 'footnotes', 'mergetags', 'autocorrect', 'typography', 'inlinecss', 'markdown','importword', 'exportword', 'exportpdf'
          ],
          toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | table mergetags | spellcheckdialog a11ycheck typography uploadcare | align lineheight | checklist numlist bullist indent outdent | emoticons charmap | removeformat',
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}
